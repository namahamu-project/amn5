{
  "name": "rts16",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "run-p serve copy sass",
    "serve": "node ./server.js",
    "test": "run-p lint:css",
    "lint:css": "stylelint './src/scss/**/*.scss'",
    "prettier": "prettier --write './src/scss/**/*.scss'",
    "copy": "run-p copy:*",
    "copy:html": "cpx 'src/html/*.html' dist --watch",
    "sass": "sass --load-path=node_modules --watch ./src/scss/index.scss dist/css/index.css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "sass": "^1.18.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  },
  "dependencies": {
    "sanitize.css": "^8.0.0"
  }
}
